<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/button_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra leve hacia abajo -->
    <item android:bottom="2dp"> <!-- Ligeramente más pronunciada para dar efecto de profundidad -->
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="#A6C0D1" /> <!-- Color de la sombra suave -->
        </shape>
    </item>
    <!-- Fondo del botón sin borde -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#60FAFAFA" /> <!-- Fondo del botón -->
            <corners android:radius="4dp" />
        </shape>
    </item>
</layer-list>
