<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/none"
    android:gravity="center|clip_vertical|center_horizontal">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btAddRoutine"
        android:layout_width="411dp"
        android:layout_height="40dp"
        android:layout_marginEnd="6dp"
        android:background="@drawable/button_background3"
        android:text="New Routine"
        android:textDirection="locale"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/descLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/descLayout"
        app:layout_constraintVertical_bias="1.0"
        app:strokeWidth="2dp" />

</LinearLayout>